		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"composite": true,
		"types": [
			"vite/client",
		]
	},
	"include": [
		"./index.ts",
	],
	"references": [
		{
			"path": "./client/tsconfig.json"
		},
		{
			"path": "./tooling/tsconfig.json"
		},
	]
}